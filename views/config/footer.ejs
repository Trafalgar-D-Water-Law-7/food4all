<script>
    // Get elements
    const openFeedbackFormBtn = document.getElementById("openFeedbackFormBtn");
    const feedbackForm = document.getElementById("feedbackForm");
    const closeFeedbackFormBtn = document.getElementById("closeFeedbackFormBtn");
    const feedbackInput = document.getElementById("feedbackInput");
    const backgroundDimmer = document.getElementById("backgroundDimmer");
    const errorMessage = document.getElementById("errorMessage");


    // Submit validation for the feedback form
    // Form validation on submit
    // Real-time validation while typing
    feedbackMessage.addEventListener("input", function () {
        const message = feedbackMessage.value.trim();

        // Count words in the feedback message
        const wordCount = message.split(/\s+/).length;

        // Validate the word count (between 5 and 20 words)
        if (wordCount < 5 || wordCount > 20) {
            // Display error message
            errorMessage.classList.remove("d-none");
        } else {
            // Hide error message if word count is valid
            errorMessage.classList.add("d-none");
        }
    });

    // Form submission validation
    feedbackForm.addEventListener("submit", function (event) {
        const message = feedbackMessage.value.trim();

        // Count words in the feedback message
        const wordCount = message.split(/\s+/).length;

        // Validate the word count (between 5 and 20 words)
        if (wordCount < 5 || wordCount > 20) {
            // Prevent form submission
            event.preventDefault();

            // Display error message if not already displayed
            if (errorMessage.classList.contains("d-none")) {
                errorMessage.classList.remove("d-none");
            }
        }
    });


    // Show the feedback form and dim the background when the button is clicked
    openFeedbackFormBtn.addEventListener("click", function () {
        feedbackForm.style.display = "block"; // Show the form
        backgroundDimmer.style.display = "block"; // Show the dimmed background
    });

    // Show the feedback form and dim the background when the input field is clicked
    feedbackInput.addEventListener("click", function () {
        feedbackForm.style.display = "block"; // Show the form
        backgroundDimmer.style.display = "block"; // Show the dimmed background
    });

    // Hide the feedback form and remove the dimmed background when the cancel button is clicked
    closeFeedbackFormBtn.addEventListener("click", function () {
        feedbackForm.style.display = "none"; // Hide the form
        backgroundDimmer.style.display = "none"; // Remove the dimmed background
    });

</script>