<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Request Food - Plate Share</title>
  <%- include('config/export') %>

  <style>
    .form-section {
      background-color: #ffffff;
      border-radius: 8px;
      padding: 30px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    }

    .form-section h2 {
      font-weight: 600;
    }

    .location-alert {
      background-color: #e9f7ef;
      color: #1e7e34;
      border: 1px solid #c3e6cb;
      border-radius: 6px;
      padding: 10px;
      font-size: 0.95rem;
      text-align: center;
      margin-top: 15px;
    }

    .form-control:valid {
      border-color: #198754;
    }

    .form-control:invalid {
      border-color: #dc3545;
    }

    .toast {
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: #28a745;
      color: white;
      padding: 10px 15px;
      border-radius: 5px;
      display: none;
      z-index: 1000;
    }
  </style>
</head>

<body>
  <%- include('config/nav') %>

  <!-- Header -->
  <div class="container-xxl py-5 bg-dark hero-header mb-5">
    <div class="container text-center my-5 pt-5 pb-4">
      <h1 class="display-4 text-white mb-3 animated slideInDown">Request Food</h1>
    </div>
  </div>

  <div class="container my-5">
    <div class="row align-items-center justify-content-center">
      
      <!-- Left: Form -->
      <div class="col-md-6">
        <div class="form-section bg-white p-4 shadow rounded">
          <h2 class="text-center mb-4">Submit a Food Request</h2>
          <form id="foodRequestForm" action="/request/submit-food-request" method="POST" novalidate>
            <!-- Hidden Location -->
            <input type="hidden" id="latitude" name="latitude" />
            <input type="hidden" id="longitude" name="longitude" />
  
            <!-- Message -->
            <div class="mb-3">
              <label for="message" class="form-label">üìù Message</label>
              <textarea class="form-control" id="message" name="message" rows="3"
                placeholder="Please share any important details..." required></textarea>
              <div class="invalid-feedback">Message must be at least 5 words.</div>
            </div>
  
            <!-- Address -->
            <div class="mb-3">
              <label for="address" class="form-label">üìç Delivery Address</label>
              <input type="text" id="address" name="address" class="form-control"
                placeholder="Enter your full delivery address" required />
              <div class="invalid-feedback">Address must be at least 5 characters.</div>
            </div>
  
  
            <!-- Submit Button -->
            <button type="submit" class="btn btn-success w-100">Submit Request</button>
  
            <!-- Location Info -->
            <div class="location-alert mt-3">
              ‚úÖ We use your current location to connect you with nearby food donors.
            </div>
          </form>
        </div>
      </div>
  
      <!-- Right: Visual Section -->
      <div class="col-md-6 mt-4 mt-md-0 d-flex flex-column align-items-center text-center">
        <img src="/img/about-3.jpg" class="img-fluid mb-3" alt="Helping with food" style="max-height: 300px;">
        <h4 class="text-primary">Need a meal? We‚Äôre here to help.</h4>
        <p class="text-muted">By filling this form, you're taking the first step toward receiving support from our community of kind-hearted donors.</p>
      </div>
  
    </div>
  </div>
  

  <div class="toast" id="toast">üìç Location added!</div>

  <%- include('config/footer') %>

  <!-- Scripts -->

  <script>
    window.addEventListener("DOMContentLoaded", () => {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(
                (position) => {
                    document.getElementById("latitude").value = position.coords.latitude;
                    document.getElementById("longitude").value = position.coords.longitude;
                },
                (error) => {
                    console.warn("Location access denied or failed:", error.message);
                    // Optional: show a visual alert to the user
                    const alertBox = document.querySelector(".location-alert");
                    if (alertBox) {
                        alertBox.textContent = "We couldn't access your location. Please allow GPS.";
                        alertBox.classList.add("bg-warning", "text-dark");
                    }
                }
            );
        } else {
            alert("Geolocation is not supported by your browser.");
        }
    });
</script>

  <script>
    const toast = document.getElementById("toast");

    

    // Client-side validation
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("foodRequestForm");
      const message = document.getElementById("message");
      const address = document.getElementById("address");

      function validateField(field, isInvalid, errorMessage) {
        if (isInvalid) {
          field.classList.add("is-invalid");
          field.classList.remove("is-valid");
          field.nextElementSibling.textContent = errorMessage;
        } else {
          field.classList.remove("is-invalid");
          field.classList.add("is-valid");
        }
      }

      message.addEventListener("input", function () {
        const wordCount = message.value.trim().split(/\s+/).length;
        validateField(message, wordCount < 5, "Message must be at least 5 words.");
      });

      address.addEventListener("input", function () {
        validateField(address, address.value.trim().length < 5, "Address must be at least 5 characters.");
      });

      form.addEventListener("submit", function (e) {
        if (message.classList.contains("is-invalid") || address.classList.contains("is-invalid")) {
          e.preventDefault();
        }
      });
    });
  </script>
</body>
</html>
