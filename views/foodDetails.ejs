<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Plate Share - About Us</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <style>
        #map {
            height: 500px;
            width: 100%;
            margin-top: 10px;
        }
    </style>

    <%- include('config/export') %>
</head>

<body>

    <h1>
        <%=food.donationCount%>
    </h1>
    <div class="container-xxl bg-white p-0">
        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">


            <%- include('config/nav') %>

                <div class="container-xxl py-5 bg-dark hero-header mb-5">
                    <div class="container text-center my-5 pt-5 pb-4">
                        <h1 class="display-3 text-white mb-3 animated slideInDown">Food Details</h1>
                    </div>
                </div>
        </div>
        <!-- Navbar & Hero End -->


        <!-- About Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6">
                        <div class="row g-3">
                            <% if (food.photos && food.photos[0]) { %>
                                <div class="col-6 text-start">
                                    <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.1s"
                                        src="/<%= food.photos[0] %>">
                                </div>
                                <% } %>

                                    <% if (food.photos && food.photos[1]) { %>
                                        <div class="col-6 text-start">
                                            <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.3s"
                                                src="/<%= food.photos[1] %>" style="margin-top: 25%;">
                                        </div>
                                        <% } %>

                                            <% if (food.photos && food.photos[2]) { %>
                                                <div class="col-6 text-end">
                                                    <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.5s"
                                                        src="/<%= food.photos[2] %>">
                                                </div>
                                                <% } %>

                                                    <% if (food.photos && food.photos[3]) { %>
                                                        <div class="col-6 text-end">
                                                            <img class="img-fluid rounded w-100 wow zoomIn"
                                                                data-wow-delay="0.7s" src="/<%= food.photos[3] %>">
                                                        </div>
                                                        <% } %>
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <h2 class="section-title ff-secondary text-start text-primary fw-normal">Food for you</h5><br>

                            <h1 class="mb-4">Donated bY <i class="fa fa-utensils text-primary me-2"></i>
                                <%=food.name%>
                            </h1>
                            <p class="mb-4">
                                <%=food.message%>
                            </p>
                            <div class="row g-4 mb-4">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center border-start border-5 border-primary px-3">
                                        <h1 class="flex-shrink-0 display-5 text-primary mb-0" data-toggle="counter-up">
                                            <%=food.user[0].donationCount%>

                                        </h1>


                                        <div class="ps-4">
                                            <p class="mb-0">Times</p>
                                            <h6 class="text-uppercase mb-0">Donated</h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <h3 class="  countdown section-title ff-secondary text-start text-primary fw-normal"
                                data-expiry="<%= food.expiryTime %>">
                                <%=food.expiryTime%>
                                    </h5><br>
                                    <script>

                                        document.addEventListener("DOMContentLoaded", function () {
                                            const countdownElements = document.querySelectorAll(".countdown");

                                            countdownElements.forEach((element) => {
                                                const expiryTime = new Date(element.getAttribute("data-expiry")).getTime();

                                                function updateCountdown() {
                                                    const now = new Date().getTime();
                                                    const distance = expiryTime - now;

                                                    if (distance <= 0) {
                                                        element.textContent = "Expired";
                                                        clearInterval(interval); // Stop updating
                                                        return;
                                                    }

                                                    const hours = Math.floor((distance / (1000 * 60 * 60)));
                                                    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                                                    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

                                                    element.textContent = `${hours}h ${minutes}m ${seconds}s to Expire`;
                                                }

                                                updateCountdown(); // Initial call
                                                const interval = setInterval(updateCountdown, 1000); // Update every second
                                            });
                                        });
                                    </script>
                                    <form action="/users/claim/<%= food._id %>" method="POST"
                                        onsubmit="return confirm('Are you sure you want to claim this food?');">
                                        <% if (food.status==="claimed" ) { %>
                                            <button class="btn btn-secondary py-3 px-5 mt-2" disabled>Claimed</button>
                                            <% } else { %>
                                                <form action="/users/claim/<%= food._id %>" method="POST"
                                                    onsubmit="return confirm('Are you sure you want to claim this food?');">
                                                    <button class="btn btn-primary py-3 px-5 mt-2" type="submit">Claim
                                                        Food</button>
                                                </form>
                                                <% } %>

                                    </form>
                    </div>
                </div>
            </div>

            <br>
            <br>

            <span id="latitude" style="display: none;">
                <%= food.latitude %>
            </span>
            <span id="longitude" style="display: none;">
                <%= food.longitude %>
            </span>


            <script>

                const latitude = document.getElementById("latitude").innerText
                const longitude = document.getElementById("longitude").innerText

                const mapSrc = `https://maps.google.com/maps?q=${latitude},${longitude}&t=&z=14&ie=UTF8&iwloc=B&output=embed`;
                document.getElementById("map").src = mapSrc;

            </script>
        </div>
        <%- include('config/footer')%>

</body>

</html>